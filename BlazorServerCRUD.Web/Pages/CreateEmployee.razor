@page "/createemployee"
@using Pages
@inject Services.IEmployeeService Service
@inject NavigationManager navManager
<h3>CreateEmployee</h3>

<Form ButtonText="Create Employee" employee="@employee"
    OnValidSubmit="@Create" />

@code {
    Models.Employee employee = new Models.Employee();

    async Task Create()
    {
        await Service.AddEmployee(employee);
        navManager.NavigateTo("/");
    }
}
